<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocialCommunity.DonatorDetail">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/donatorDetailTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Donator Details"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ShadowForText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/donatorDetailNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donatorDetailTitle"
        app:helperTextEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Donator Name" >

        <EditText
            android:id="@+id/donatorDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="7dp"
            android:inputType="textPostalAddress" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/donatorDetailPhoneNumberLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="@+id/donatorDetailNameLayout"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toStartOf="@+id/donatorDetailNameLayout"
            app:layout_constraintTop_toBottomOf="@+id/donatorDetailNameLayout">

            <EditText
                android:id="@+id/donatorDetailPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="152dp"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="7dp"
                android:ems="10"
                android:hint="Donator Phone Number"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="@+id/register_email_layout"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/register_email_layout"
                app:layout_constraintTop_toBottomOf="@+id/register_email_layout" />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/donatorDetailPickUpAddressLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Pick Up Address"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/donatorDetailPhoneNumberLayout"
        app:layout_constraintStart_toStartOf="@+id/donatorDetailPhoneNumberLayout"
        app:layout_constraintTop_toBottomOf="@+id/donatorDetailPhoneNumberLayout">

        <EditText
            android:id="@+id/donatorDetailPickUpAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="7dp"
            android:ems="10"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/donatorDetailDateLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Pick Up / Send Date"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/donatorDetailPickUpAddressLayout"
        app:layout_constraintStart_toStartOf="@+id/donatorDetailPickUpAddressLayout"
        app:layout_constraintTop_toBottomOf="@+id/donatorDetailPickUpAddressLayout">

        <EditText
            android:id="@+id/donatorDetailDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="7dp"
            android:ems="10"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/donatorDetailTimeLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Time"
        app:counterEnabled="true"
        app:counterMaxLength="3"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/donatorDetailDateLayout"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/donatorDetailDateLayout"
        app:layout_constraintTop_toBottomOf="@+id/donatorDetailDateLayout">

        <EditText
            android:id="@+id/donatorDetailTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="7dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="3" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/donatorDetailTotalDonationLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Total Donation"
        app:counterEnabled="true"
        app:counterMaxLength="3"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/donatorDetailTimeLayout"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/donatorDetailTimeLayout"
        app:layout_constraintTop_toBottomOf="@+id/donatorDetailTimeLayout">

        <EditText
            android:id="@+id/donatorDetailTotalDonation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="7dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="3" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/donatorDetailDonationDateLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Donation Date"
            app:counterEnabled="true"
            app:counterMaxLength="3"
            app:errorEnabled="true"
            app:layout_constraintEnd_toEndOf="@+id/donatorDetailTotalDonationLayout"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toStartOf="@+id/donatorDetailTotalDonationLayout"
            app:layout_constraintTop_toBottomOf="@+id/donatorDetailTotalDonationLayout">

            <EditText
                android:id="@+id/donatorDetailDonationDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="7dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/donate_food_photo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/insert_image"
            app:layout_constraintEnd_toEndOf="@+id/donatorDetailDonationDateLayout"
            app:layout_constraintStart_toStartOf="@+id/donatorDetailDonationDateLayout"
            app:layout_constraintTop_toBottomOf="@+id/donate_insert_image_text" />

    <TextView
        android:id="@+id/donate_insert_image_text"
        style="@style/ShadowForText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Food Image:"
        android:layout_marginTop="8dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/donatorDetailDonationDateLayout"
        app:layout_constraintTop_toBottomOf="@+id/donatorDetailDonationDateLayout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/donate_confirm"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="Confirm Donation"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textSize="14sp"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donate_food_photo" />

        <ProgressBar
            android:id="@+id/donate_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/donate_confirm"
            app:layout_constraintEnd_toEndOf="@+id/donate_confirm"
            app:layout_constraintStart_toStartOf="@+id/donate_confirm"
            app:layout_constraintTop_toTopOf="@+id/donate_confirm" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>