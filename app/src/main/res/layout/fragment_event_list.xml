    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/eventEmptyPicture"
        android:layout_width="400dp"
        android:layout_height="230dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/event_empty_edited"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventSearchLayout" />
        <TextView
            android:id="@+id/eventEmptyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.15"
            android:text="Currently, there are no active events available"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/eventEmptyPicture"
            app:layout_constraintStart_toStartOf="@+id/eventEmptyPicture"
            app:layout_constraintTop_toBottomOf="@+id/eventEmptyPicture" />

