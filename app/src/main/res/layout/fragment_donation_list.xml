    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/donationListSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/sort_by_spinner"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/donationListTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/donationListTitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/donationListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donationListSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>