<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.social_community.profile.SocialCommunityProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/socialCommunityProfileTitle"
            style="@style/ShadowForText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/profile_information_title"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/socialCommunityProfileFullNameLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/fullname_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/socialCommunityProfilePhoto">

            <EditText
                android:id="@+id/socialCommunityProfileFullName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_person_outline_black_24dp"
                android:drawablePadding="@dimen/drawable_padding"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/socialCommunityProfileTelephoneNumberLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/telephone_number_placeholder"
            app:layout_constraintEnd_toEndOf="@+id/socialCommunityProfileFullNameLayout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/socialCommunityProfileFullNameLayout"
            app:layout_constraintTop_toBottomOf="@+id/socialCommunityProfileFullNameLayout">

            <EditText
                android:id="@+id/socialCommunityProfileTelephoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawablePadding="@dimen/drawable_padding"
                android:ems="10"
                android:inputType="phone"
                android:textColor="#000000" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/socialCommunityProfileDescriptionLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Description"
            app:layout_constraintEnd_toEndOf="@+id/socialCommunityProfileTelephoneNumberLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/socialCommunityProfileTelephoneNumberLayout"
            app:layout_constraintTop_toBottomOf="@+id/socialCommunityProfileTelephoneNumberLayout">

            <EditText
                android:id="@+id/socialCommunityProfileDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_description_black_24dp"
                android:drawablePadding="@dimen/drawable_padding"
                android:ems="10"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/socialCommunityProfileTotalEventCreatedLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:hint="Total Event Created"
            app:layout_constraintBottom_toTopOf="@+id/socialCommunityProfileUpdateCredentialButton"
            app:layout_constraintEnd_toEndOf="@+id/socialCommunityProfileDescriptionLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/socialCommunityProfileDescriptionLayout"
            app:layout_constraintTop_toBottomOf="@+id/socialCommunityProfileDescriptionLayout"
            app:layout_goneMarginBottom="16dp">

            <EditText
                android:id="@+id/socialCommunityProfileTotalEventCreated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/ic_donate_black_24dp"
                android:drawablePadding="@dimen/drawable_padding"
                android:ems="10"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--        <de.hdodenhof.circleimageview.CircleImageView-->
        <!--            android:id="@+id/socialCommunityProfilePhoto"-->
        <!--            android:layout_width="96dp"-->
        <!--            android:layout_height="96dp"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:adjustViewBounds="true"-->
        <!--            android:src="@drawable/insert_image"-->
        <!--            app:layout_constraintEnd_toEndOf="@+id/socialCommunityProfileConfirmPasswordLayout"-->
        <!--            app:layout_constraintStart_toStartOf="@+id/socialCommunityProfileConfirmPasswordLayout"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/socialCommunityProfileImageText"-->
        <!--            app:civ_border_width="2dp"-->
        <!--            app:civ_border_color="#FF000000"/>-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/socialCommunityProfilePhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/insert_image"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/socialCommunityProfileTitle" />

        <ImageView
            android:id="@+id/socialCommunityProfilePencilIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@+id/socialCommunityProfilePhoto"
            app:layout_constraintEnd_toEndOf="@+id/socialCommunityProfilePhoto" />

        <ProgressBar
            android:id="@+id/socialCommunityProfilePhotoProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/socialCommunityProfilePhoto"
            app:layout_constraintEnd_toEndOf="@+id/socialCommunityProfilePhoto"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/socialCommunityProfilePhoto"
            app:layout_constraintTop_toTopOf="@+id/socialCommunityProfilePhoto" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/socialCommunityProfileUpdateCredentialButton"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:text="Update Credential"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textSize="12sp"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/socialCommunityProfileUpdateButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/socialCommunityProfileUpdateButton" />

        <ProgressBar
            android:id="@+id/socialCommunityProfileUpdateCredentialProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/socialCommunityProfileUpdateCredentialButton"
            app:layout_constraintEnd_toEndOf="@+id/socialCommunityProfileUpdateCredentialButton"
            app:layout_constraintStart_toStartOf="@+id/socialCommunityProfileUpdateCredentialButton"
            app:layout_constraintTop_toTopOf="@+id/socialCommunityProfileUpdateCredentialButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/socialCommunityProfileUpdateButton"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="Update Profile"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textSize="12sp"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/socialCommunityProfileLogOutButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/socialCommunityProfileUpdateCredentialButton" />

        <ProgressBar
            android:id="@+id/socialCommunityProfileProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/socialCommunityProfileUpdateButton"
            app:layout_constraintEnd_toEndOf="@+id/socialCommunityProfileUpdateButton"
            app:layout_constraintStart_toStartOf="@+id/socialCommunityProfileUpdateButton"
            app:layout_constraintTop_toTopOf="@+id/socialCommunityProfileUpdateButton" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/socialCommunityProfileLogOutButton"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/log_out_button"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
            android:textSize="12sp"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>