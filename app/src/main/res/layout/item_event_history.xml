<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#af4448"
    android:id="@+id/eventHistoryLayout"
    android:focusable="true"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/eventHistoryImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img_basketball"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="8dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/eventHistoryTitle"
            style="@style/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventHistoryImage"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="16dp"
            android:text="@string/event_title_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventHistoryImage" />

        <ImageView
            android:id="@+id/eventHistoryTotalDonationIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/eventHistoryTitle"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|start"
            android:src="@drawable/ic_weight"
            android:tint="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/eventHistoryTotalDonationText"
            app:layout_constraintStart_toStartOf="@+id/eventHistoryTitle"
            app:layout_constraintTop_toTopOf="@+id/eventHistoryTotalDonationSubtitle" />

        <TextView
            android:id="@+id/eventHistoryTotalDonationSubtitle"
            style="@style/eventInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Total Donation"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/eventHistoryTotalDonationIcon"
            app:layout_constraintTop_toBottomOf="@+id/eventHistoryTitle" />

        <TextView
            android:id="@+id/eventHistoryTotalDonationText"
            style="@style/eventInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"

            app:layout_constraintStart_toEndOf="@+id/eventHistoryTotalDonationIcon"
            app:layout_constraintTop_toBottomOf="@+id/eventHistoryTotalDonationSubtitle"
            tools:text="30 / 50 kg"/>

        <ImageView
            android:id="@+id/eventHistoryEndDateIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/eventHistoryTitle"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|start"
            android:src="@drawable/ic_date_black_24dp"
            android:tint="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/eventHistoryEndDateText"
            app:layout_constraintStart_toStartOf="@+id/eventHistoryTotalDonationIcon"
            app:layout_constraintTop_toTopOf="@+id/eventHistoryEndDateSubtitle" />

        <TextView
            android:id="@+id/eventHistoryEndDateSubtitle"
            style="@style/eventInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Open Donation Until"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/eventHistoryEndDateIcon"
            app:layout_constraintTop_toBottomOf="@+id/eventHistoryTotalDonationText" />

        <TextView
            android:id="@+id/eventHistoryEndDateText"
            style="@style/eventInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/eventHistoryEndDateIcon"
            app:layout_constraintTop_toBottomOf="@+id/eventHistoryEndDateSubtitle"
            tools:text="Thursday, July 30, 2020"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>